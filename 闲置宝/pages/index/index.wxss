/* 模块分区 */
.list{
width: 100%;
height: 380rpx;
color: black;
}
 .resoutuijian{
   margin-top: 10rpx;
  background-color: #c1c1c1;
}
 .jingpinhaoshu{
  background-color: #fff;
}
.xinshuremai{
  background-color: #c1c1c1;
}
.jikemiaosha{
  background-color: #fff;
}
.ershouzhuanqu{
  background-color: #fff;
}

.list .content_text{
width: 100%;
margin-bottom: 5rpx;
}
.list .title{
  margin-left: 20rpx;
}
.list .turntodetail{
float: right;
margin-right: 20rpx;
}

.list .content_list{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.list .content_list .example{
  width: 250rpx;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  
}
.list .content_list .example .example_list{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  border: 1px solid #d0d0d0;
  background-color: #ffffff;
  border-radius: 30rpx;
  box-shadow: 3px 1px 1px #A8A8A8;
}
.top_pic{
 display: flex;
  flex-direction: row;
  justify-content: center;
  height: 140rpx;
}
.list .content_list .example_pic{
  width: 140rpx;
	height: 140rpx;
  padding: 15rpx;
}
.example_list .introduce{
  height: 140rpx;
  color: black;
  font-size: 30rpx;
  margin-top: 15rpx;
  text-align: center;
}
.example_list .introduce text{
  height: 80rpx;
text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
.introduce .sku-price{
  color: red;
  position: relative;
  font-size: 35rpx;
}